.header {
	background-color: #FFFFFF;
	height: 64px;
	position: fixed;
	top: 0px;
	left: 0px;
	width: 100%;
	z-index: 10;
}

.header-mobile {
	border 1px solid blue;
	display: flex;
	justify-content: space-between;
}

.header-logo {
	border 1px solid red;
	order: 1;
	margin-left: 1rem;
}

.header-btn-nav {
	order: 2;
	border: 0px;
	border-radius: 5px;
	background-color: #FFFFFF;
	margin-right: 1rem;
}

.header-menu-navbar {
	background-color: #FFFFFF;
}

.header-menu-list {
	height: 0px;
	overflow: hidden;
	transition: height .3s ease;
}

.header-menu-list-show {
	height: 280px;
}

.header-menu-list-item {
	border 1px solid red;
	width: 100%;
	padding: 1.5rem;
}

@media (min-width: 768px) {
	.header {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: space-between;
		height: 80px;
		transition: all .3s ease;
	}

	.header-btn-nav {
		display: none;
	}

	.header-menu-list {
		height: 80px;
		display: flex;

	}

	.header-menu-list-item {
	}
}